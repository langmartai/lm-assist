{
  "name": "lm-assist",
  "version": "0.1.2",
  "description": "LM Assistant - Web UI for managing Claude Code sessions with backend API for session management, milestones, knowledge, architecture, and hub connectivity",
  "license": "AGPL-3.0-or-later",
  "author": {
    "name": "langmartai",
    "url": "https://github.com/langmartai/lm-assist"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/langmartai/lm-assist.git"
  },
  "bugs": {
    "url": "https://github.com/langmartai/lm-assist/issues"
  },
  "homepage": "https://github.com/langmartai/lm-assist#readme",
  "keywords": [
    "claude-code",
    "session-management",
    "knowledge-base",
    "milestones",
    "architecture",
    "ai-assistant"
  ],
  "bin": {
    "lm-assist": "./bin/lm-assist.js"
  },
  "main": "./core/dist/index.js",
  "files": [
    "core/dist",
    "web/.next",
    "web/public",
    "core.sh",
    "bin",
    "LICENSE",
    "README.md",
    ".env.example"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.0",
    "@hono/node-server": "^1.19.9",
    "@huggingface/transformers": "^3.8.1",
    "@lancedb/lancedb": "^0.26.2",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/chokidar": "^1.7.5",
    "chokidar": "^5.0.0",
    "hono": "^4.11.5",
    "http-proxy": "^1.18.1",
    "lmdb": "^3.5.1",
    "uuid": "^9.0.0",
    "ws": "^8.18.0"
  },
  "workspaces": ["core", "web"],
  "scripts": {
    "build:core": "cd core && npm run build",
    "build:web": "cd web && npm run build",
    "build": "npm run build:core && npm run build:web",
    "start": "./core.sh start",
    "stop": "./core.sh stop",
    "restart": "./core.sh restart",
    "prepare": "npm run build"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
